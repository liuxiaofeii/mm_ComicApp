<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/booklinearlayout"

        android:background="@drawable/home_list_selected_bg"
        >
    <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            android:text="致命雕塑"
            android:textColor="@color/colorTextColorDark"
            android:textSize="18dp" />

    <ImageView
            android:id="@+id/bookPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/a1" android:background="#002E2929"/>

    <TextView
            android:id="@+id/bookIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            android:text="第1话"
            android:textColor="@color/colorTextColorLight" />
</LinearLayout>