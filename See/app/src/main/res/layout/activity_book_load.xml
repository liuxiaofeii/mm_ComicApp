<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ChapterActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBg"
    >

        <ImageView

                android:id="@+id/iv_bg_top_act_book_detail2"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:scaleType="centerCrop"
                android:src="@color/purple_700" tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        />
        <ImageView
                android:src="?attr/actionModeCloseDrawable"
                android:layout_width="50dp"
                android:layout_height="0dp" android:id="@+id/backshow" tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/iv_bg_top_act_book_detail2"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="下一章"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nextcontent" tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toStartOf="@+id/iv_bg_top_act_book_detail2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="700dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
                android:textSize="24sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="68dp"
            android:fillViewport="true"
    >
        <ListView
                android:id="@+id/contentPath1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:layout_conversion_absoluteHeight="64dp"
                tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="411dp">
        </ListView>
    </ScrollView>
</RelativeLayout>